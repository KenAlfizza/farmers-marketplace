<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".store.StoreRegisterActivity"
    android:orientation="vertical"
    android:id="@+id/lay_create_store">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CREATE STORE"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Image"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <ImageButton
                    android:id="@+id/btn_register_store_image"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/ic_store_empty_grey"
                    android:layout_margin="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Details"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_register_store_name"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:hint="Name"
                    android:background="@drawable/bg_edittext"
                    android:padding="12dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_register_store_phone"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:hint="Phone"
                    android:background="@drawable/bg_edittext"
                    android:padding="12dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_register_store_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_edittext"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Location"
                    android:layout_marginBottom="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_register_store_province"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:hint="Province"
                    android:background="@drawable/bg_edittext"
                    android:padding="12dp" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_register_store_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="City"
                    android:background="@drawable/bg_edittext"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="12dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_register_store_postcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Post Code"
                    android:background="@drawable/bg_edittext"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="12dp"/>


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_register_store_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:hint="Address..."
                    android:gravity="top"
                    android:background="@drawable/bg_edittext"
                    android:padding="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store Description"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_register_store_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:background="@drawable/bg_edittext"
                    android:hint="Description..."
                    android:gravity="top"
                    android:padding="12dp"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/btn_register_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="Submit" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>